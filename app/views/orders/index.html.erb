<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Order no</th>
      <th>Total</th>
      <th>Date</th>
      <th>Customer</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_no %></td>
        <td><%= order.total %></td>
        <td><%= order.date %></td>
        <td><%= order.try(:customer).first_name + " " + order.customer.last_name %></td>
        <% if order.status == '0' %>
        <td><%= link_to 'Checkout', new_charge_path(o_id: order.id) %></td>
        <% else %>
        <td><p>Paid</p></td>
        <% end %>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

